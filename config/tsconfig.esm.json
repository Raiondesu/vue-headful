{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015",
      "es5"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "baseUrl": "../",
    "outDir": "../dist/esm",
    "typeRoots": [
      "../node_modules/@types",
      "../node_modules/vue/types"
    ]
  },
  "files": [
    "../index.ts"
  ]
}
